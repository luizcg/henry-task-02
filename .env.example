# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
# Alternative: text-embedding-3-large, text-embedding-ada-002

# LLM Model Configuration
LLM_MODEL=gpt-4o
# Alternative: gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo

# Vector Store Configuration
VECTOR_STORE_TYPE=faiss
# Alternative: chroma (for future migration)

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.3  # Lower threshold for L2 distance-based scores (0.0-1.0)

# System Configuration
LOG_LEVEL=INFO
